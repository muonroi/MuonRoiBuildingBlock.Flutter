name: { { project_name } }
description: A new Flutter project created with base MuonroiBuildingBlock.Flutter.
vars:
  project_name:
    type: string
    description: "Project name (no uppercase letters or spaces)"
  app_name:
    type: string
    description: "Your app widget name"
    default: MuonroiBuildingBlock
  app_title:
    type: string
    description: "App title displayed on AppBar"
    default: "Muonroi BuildingBlock
publish_to: "none"
version: 0.0.1

environment:
  sdk: ">=2.18.0 <3.0.0"
  flutter: ">=3.0.0"

dependencies:
  flutter:
    sdk: flutter
  go_router: ^14.8.1
  dio: ^5.8.0+1
  bloc: ^9.0.0
  flutter_bloc: ^9.1.0
  equatable: ^2.0.7
  google_fonts: ^6.2.1
  flutter_animate: ^4.5.2
  hive: ^2.2.3
  path_provider: ^2.1.5
  fluttertoast: ^8.2.12
  flutter_riverpod: ^2.6.1

dev_dependencies:
  flutter_test:
    sdk: flutter
  build_runner: ^2.3.3
  hive_generator: ^2.0.0
